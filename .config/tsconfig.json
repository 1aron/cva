{
  "include": ["../src/**/*.ts"],
  "exclude": ["../node_modules", "../dist", "../src/**/*.test.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../dist",
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "incremental": true,
    "skipLibCheck": true
  }
}
